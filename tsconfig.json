{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es2017",
    "jsx": "react",
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "declaration": false,
    "removeComments": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "strict": true,
    "lib": ["es6", "es7", "es2017", "dom"],
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "noErrorTruncation": true
  }
}
